<div class="modal hide in" id="create_location_data" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" id ="ytr">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h6 class="modal-title" id="myModalLabel">Create location data</h6>
      </div>            
      
      <div class="modal-body" id="utility_body">  
        <%= form_tag :url => location_data_path(params[:location_id]), :method => :post, :html => { :class => "hide", :id => "lead_status_edit" } do |form| %>
          
          <div class="span6">    
            <label>Time in minutes since Jan 1st, 2014</label>        
            <%= text_field_tag "datum[date_time]", "", { :class => "span3 select2", :placeholder => "Datetime", :required => true } %><br>
        
            <label>Instantaneous power (in watts)</label>
            <%= number_field_tag "datum[instantaneous_power]", "", { :class => "span3 select2", :placeholder => "Instantaneous power", :required => true, :step => "any" } %><br><br>
          
            <%= submit_tag "Create", :class => "span2 btn btn-small btn-primary" %> 
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>