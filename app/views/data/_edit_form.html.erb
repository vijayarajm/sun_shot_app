<div class="modal hide in" id="<%= "edit_location_data_#{datum.id}" %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" id ="ytr">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h6 class="modal-title" id="myModalLabel">Edit location data</h6>
      </div>            
      
      <div class="modal-body" id="utility_body">  
        <%= form_for datum, :url => location_datum_path(params[:location_id], datum.id), :method => :put, :html => { :class => "hide" } do |form| %>
          <div class="span6">            
            <label>Time in minutes since Jan 1st, 2014</label>        
            <%= form.text_field :date_time, { :class => "span3 select2 required", :placeholder => "Unique ID", :required => true } %><br>
          
            <label>Instantaneous power (in watts)</label>
            <%= form.text_field :instantaneous_power, { :class => "span3 select2", :placeholder => "Name", :required => true } %><br><br>            
            
            <%= form.submit "Update", :class => "span2 btn btn-small btn-primary" %> 
          </div>
        <% end %> 
      </div>

    </div>
  </div>
</div>
